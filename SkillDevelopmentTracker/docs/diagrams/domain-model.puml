@startuml Skill Development Tracker - Domain Model

skinparam class {
    BackgroundColor<<AggregateRoot>> #FFE6E6
    BackgroundColor<<Entity>> #E6F3FF
    BackgroundColor<<ValueObject>> #E6FFE6
}

package "Skill Aggregate" {
    class Skill <<AggregateRoot>> {
        +SkillId: Guid
        +UserId: Guid
        +SkillName: string
        +Category: SkillCategory
        +CurrentProficiency: ProficiencyLevel
        +TargetProficiency: ProficiencyLevel
        +TargetDate: DateTime
        +ValidationStatus: ValidationStatus
        --
        +UpdateProgress()
        +Validate()
        +AchieveMastery()
    }

    enum SkillCategory {
        Technical
        SoftSkills
        Languages
        Business
        Creative
    }

    enum ProficiencyLevel {
        None
        Beginner
        Intermediate
        Advanced
        Expert
    }

    enum ValidationStatus {
        SelfReported
        ProjectValidated
        TestValidated
        CertificationValidated
        Endorsed
    }
}

package "Course Aggregate" {
    class Course <<AggregateRoot>> {
        +CourseId: Guid
        +UserId: Guid
        +CourseName: string
        +Platform: string
        +StartDate: DateTime
        +EndDate: DateTime
        +CompletionPercentage: decimal
        +Status: CourseStatus
        --
        +CompleteLesson()
        +CompleteCourse()
        +Abandon()
    }

    class Lesson <<Entity>> {
        +LessonId: Guid
        +LessonName: string
        +CompletionDate: DateTime?
        +TimeSpent: int
        +QuizScore: decimal?
    }

    enum CourseStatus {
        NotStarted
        InProgress
        Completed
        Abandoned
    }
}

package "Certification Aggregate" {
    class Certification <<AggregateRoot>> {
        +CertificationId: Guid
        +UserId: Guid
        +CertificationName: string
        +IssuingBody: string
        +TargetExamDate: DateTime
        +Status: CertificationStatus
        +CredentialNumber: string
        --
        +ScheduleExam()
        +RecordExamResult()
        +EarnCertification()
    }

    enum CertificationStatus {
        Pursuing
        ExamScheduled
        Passed
        Failed
        Earned
    }
}

' Relationships
Skill "1" -- "*" Course : develops through
Skill "1" -- "*" Certification : validated by
Course "1" *-- "*" Lesson

@enduml
