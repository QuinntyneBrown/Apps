@startuml Progress Tracking - Class Diagram

class ProgressMeasurement <<Aggregate Root>> {
  - Id : Guid
  - UserId : Guid
  - MeasurementDate : DateTime
  - Weight : decimal?
  - BodyFatPercentage : decimal?
  - Measurements : Dictionary<string, decimal>
  - Notes : string
  - PhotoUrl : string
  --
  + Create(...) : ProgressMeasurement
  + Update(...) : void
}

class FitnessGoal <<Entity>> {
  - Id : Guid
  - UserId : Guid
  - Type : GoalType
  - Description : string
  - TargetValue : decimal
  - CurrentValue : decimal?
  - TargetDate : DateTime
  - Status : GoalStatus
  --
  + UpdateProgress(value) : void
  + MarkAchieved() : void
}

enum GoalType {
  WeightLoss
  WeightGain
  StrengthGoal
  BodyFatReduction
  MuscleGain
}

enum GoalStatus {
  Active
  Achieved
  Missed
  Abandoned
}

class RecordProgressMeasurementCommand {
  + MeasurementDate : DateTime
  + Weight : decimal?
  + BodyFatPercentage : decimal?
  + Measurements : Dictionary
}

class GetProgressChartsQuery {
  + FromDate : DateTime
  + ToDate : DateTime
  + Metrics : List<string>
}

ProgressMeasurement ..> RecordProgressMeasurementCommand
FitnessGoal --> GoalType
FitnessGoal --> GoalStatus

@enduml
