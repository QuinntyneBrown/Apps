@startuml Album Organization Classes
!theme plain

class Album {
  - AlbumId: Guid
  - UserId: Guid
  - Name: string
  - Description: string
  - CoverPhotoId: Guid?
  - PrivacyLevel: enum
  - PhotoCount: int
  - CreatedAt: DateTime
  --
  + Create(): Album
  + AddPhoto(photoId): void
  + RemovePhoto(photoId): void
  + Share(options): ShareInfo
}

class AlbumPhoto {
  - AlbumId: Guid
  - PhotoId: Guid
  - Position: int
  - AddedAt: DateTime
}

class CreateAlbumCommand {
  + Name: string
  + Description: string
  + PrivacyLevel: string
}

class AlbumCreated {
  + AlbumId: Guid
  + UserId: Guid
  + Name: string
  + OccurredAt: DateTime
}

class PhotoAddedToAlbum {
  + AlbumId: Guid
  + PhotoId: Guid
  + Position: int
  + OccurredAt: DateTime
}

Album "1" *-- "*" AlbumPhoto
CreateAlbumCommand ..> Album : creates
Album ..> AlbumCreated : publishes
Album ..> PhotoAddedToAlbum : publishes

@enduml
