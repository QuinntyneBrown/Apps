@startuml Impact Tracking Class Diagram

class GivingGoal <<Aggregate Root>> {
  - goalId: Guid
  - userId: Guid
  - targetAmount: decimal
  - taxYear: int
  - currentAmount: decimal
  - isReached: bool
  - reachedDate: DateTime?
  --
  + SetGoal(): void
  + UpdateProgress(amount): void
  + CheckIfReached(): bool
  - RaiseGivingGoalSet(): void
  - RaiseGivingGoalReached(): void
}

class SetAnnualGivingGoalCommand {
  + UserId: Guid
  + TargetAmount: decimal
  + TaxYear: int
}

class GivingGoalReached <<Domain Event>> {
  + GoalId: Guid
  + TargetAmount: decimal
  + ActualAmount: decimal
  + AchievementDate: DateTime
  + OccurredAt: DateTime
}

@enduml
