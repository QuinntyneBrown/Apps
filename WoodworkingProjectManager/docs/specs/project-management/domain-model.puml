@startuml Woodworking Domain Model

entity "Project" as project {
    * id : Guid
    * name : string
    * type : ProjectType
    difficulty : Difficulty
    designSketch : string
    status : ProjectStatus
}

entity "Material" as material {
    * id : Guid
    * type : string
    * species : string
    dimensions : Dimensions
    cost : decimal
    allocated : boolean
}

entity "Tool" as tool {
    * id : Guid
    * name : string
    * type : ToolType
    purchaseDate : DateTime
    maintenanceDue : DateTime?
}

entity "BuildStep" as step {
    * id : Guid
    * projectId : Guid
    * description : string
    stepType : StepType
    completed : boolean
    timeSpent : decimal
}

entity "QualityCheck" as quality {
    * id : Guid
    * projectId : Guid
    * checkDate : DateTime
    score : int
    defects : string[]
}

project ||--o{ material : "uses"
project ||--o{ step : "consists of"
project ||--o{ quality : "inspected by"
step }o--o{ tool : "requires"

enum ProjectType {
    Furniture
    Cabinet
    Decorative
}

enum StepType {
    Cutting
    Joinery
    Assembly
    Finishing
}

@enduml
