@startuml Parts Management Domain Model

entity "Part" as part {
    * id : Guid
    * projectId : Guid
    --
    * partName : string
    partNumber : string
    category : PartCategory
    condition : PartCondition
    price : decimal
    status : PartStatus
}

entity "Supplier" as supplier {
    * id : Guid
    --
    * name : string
    contactInfo : string
    website : string
    rating : decimal
    specialties : string[]
}

entity "Order" as order {
    * id : Guid
    * partId : Guid
    * supplierId : Guid
    --
    orderDate : DateTime
    cost : decimal
    quantity : int
    shippingCost : decimal
    trackingNumber : string
    receivedDate : DateTime?
}

entity "Installation" as installation {
    * id : Guid
    * partId : Guid
    --
    installDate : DateTime
    difficulty : Difficulty
    fitQuality : FitQuality
    timeSpent : decimal
    notes : string
}

entity "Return" as return {
    * id : Guid
    * orderId : Guid
    --
    returnDate : DateTime
    reason : string
    refundAmount : decimal
    restockingFee : decimal
}

part }o--|| supplier : "sourced from"
part ||--o{ order : "ordered"
order ||--o| return : "may have"
part ||--o| installation : "installed"

enum PartCategory {
    Engine
    Transmission
    Body
    Interior
    Electrical
}

enum PartCondition {
    NOS
    Used
    Reproduction
}

enum PartStatus {
    Sourced
    Ordered
    Received
    Installed
    Returned
}

@enduml
