@startuml Expense Categories

package "Expense Tracking" {
    class "Expense" {
        +id: Guid
        +projectId: Guid
        +amount: decimal
        +category: ExpenseCategory
        +date: DateTime
        +vendor: string
        +receiptUrl: string
        --
        +RecordExpense()
        +UpdateExpense()
        +AttachReceipt()
    }

    class "Budget" {
        +id: Guid
        +projectId: Guid
        +totalBudget: decimal
        +alertThreshold: decimal
        --
        +CheckOverage()
        +GetRemaining()
        +GetSpentByCategory()
    }

    class "Tool" {
        +id: Guid
        +name: string
        +cost: decimal
        +usageCount: int
        --
        +CalculateROI()
        +AllocateCost()
    }

    enum ExpenseCategory {
        Parts
        Labor
        Tools
        Supplies
        Services
        Other
    }

    Expense "many" --o "1" Budget
    Expense --> ExpenseCategory
    Tool ..> Expense : generates
}

@enduml
