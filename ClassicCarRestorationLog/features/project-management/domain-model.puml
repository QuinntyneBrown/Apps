@startuml Project Management Domain Model

entity "RestorationProject" as project {
    * id : Guid
    --
    * vehicleMake : string
    * vehicleModel : string
    * year : int
    * vin : string
    acquisitionDate : DateTime
    purchasePrice : decimal
    conditionAtStart : string
    targetCompletion : DateTime
    status : ProjectStatus
}

entity "ProjectScope" as scope {
    * id : Guid
    * projectId : Guid
    --
    restorationType : RestorationType
    systemsToRestore : string[]
    originalityLevel : OriginalityLevel
    budgetCeiling : decimal
    qualityTargets : string
}

entity "Milestone" as milestone {
    * id : Guid
    * projectId : Guid
    --
    * name : string
    description : string
    targetDate : DateTime
    completionDate : DateTime?
    qualityAssessment : string?
    timeSpent : decimal?
    costsToDate : decimal?
    status : MilestoneStatus
}

entity "Photo" as photo {
    * id : Guid
    * projectId : Guid
    --
    url : string
    thumbnailUrl : string
    caption : string
    photoDate : DateTime
    workStage : string
}

entity "WorkSession" as session {
    * id : Guid
    * projectId : Guid
    --
    startTime : DateTime
    endTime : DateTime?
    plannedTasks : string[]
    status : SessionStatus
}

project ||--o{ scope : "has"
project ||--o{ milestone : "contains"
project ||--o{ photo : "documented by"
project ||--o{ session : "includes"

enum ProjectStatus {
    Planning
    InProgress
    Completed
    Abandoned
}

enum RestorationType {
    Concours
    Restomod
    Driver
}

enum MilestoneStatus {
    Pending
    InProgress
    Completed
}

@enduml
