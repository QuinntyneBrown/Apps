@startuml Cash Flow Use Case Diagram

!theme plain
left to right direction

actor "User" as User
actor "System" as System

rectangle "Cash Flow Analysis" {
  usecase "View Cash Flow Projection" as UC1
  usecase "View Spending by Category" as UC2
  usecase "Set Budget" as UC3
  usecase "View Budget vs Actual" as UC4
  usecase "View Cash Flow Trends" as UC5
  usecase "View Financial Health Score" as UC6
  usecase "Export Reports" as UC7
  usecase "Update Income" as UC8

  usecase "Generate Projections" as UC9
  usecase "Calculate Health Score" as UC10
  usecase "Send Budget Alerts" as UC11
}

User --> UC1
User --> UC2
User --> UC3
User --> UC4
User --> UC5
User --> UC6
User --> UC7
User --> UC8

System --> UC9
System --> UC10
System --> UC11

UC1 ..> UC9 : <<include>>
UC6 ..> UC10 : <<include>>
UC4 ..> UC11 : <<extend>>

@enduml
