@startuml Autopay Use Case Diagram

!theme plain
left to right direction

actor "User" as User
actor "System" as System

rectangle "Autopay" {
  usecase "Enable Autopay" as UC1
  usecase "Disable Autopay" as UC2
  usecase "Configure Autopay Settings" as UC3
  usecase "View Autopay Status" as UC4
  usecase "Approve Pending Execution" as UC5
  usecase "Pause Autopay" as UC6

  usecase "Execute Autopay" as UC7
  usecase "Validate Amount Limits" as UC8
  usecase "Check Approval Required" as UC9
  usecase "Handle Execution Failure" as UC10
}

User --> UC1
User --> UC2
User --> UC3
User --> UC4
User --> UC5
User --> UC6

System --> UC7

UC1 ..> UC8 : <<include>>
UC7 ..> UC8 : <<include>>
UC7 ..> UC9 : <<include>>
UC7 ..> UC10 : <<extend>>

@enduml
