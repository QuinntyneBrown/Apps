@startuml Price Tracking - Use Case Diagram

actor "User" as user
actor "System" as system

rectangle "Price Tracking System" {
    usecase "View Price History" as UC1
    usecase "Compare Store Prices" as UC2
    usecase "Set Price Alert" as UC3
    usecase "View Current Deals" as UC4
    usecase "View Savings Dashboard" as UC5
    usecase "Record Item Price" as UC6
    usecase "Detect Price Changes" as UC7
    usecase "Identify Deals" as UC8
    usecase "Send Price Alerts" as UC9
    usecase "Calculate Savings" as UC10
    usecase "Recommend Best Store" as UC11
}

user --> UC1
user --> UC2
user --> UC3
user --> UC4
user --> UC5
user --> UC6

system --> UC7
system --> UC8
system --> UC9
system --> UC10
system --> UC11

UC1 ..> UC2 : <<extend>>
UC6 ..> UC7 : <<include>>
UC7 ..> UC9 : <<include>>
UC8 ..> UC9 : <<include>>
UC2 ..> UC11 : <<include>>

@enduml
