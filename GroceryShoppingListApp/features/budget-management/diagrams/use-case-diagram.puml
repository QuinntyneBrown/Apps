@startuml Budget Management - Use Case Diagram

actor "User" as user
actor "System" as system

rectangle "Budget Management System" {
    usecase "Set Shopping Budget" as UC1
    usecase "View Budget Progress" as UC2
    usecase "Update Budget Amount" as UC3
    usecase "Track Spending" as UC4
    usecase "Send Budget Alerts" as UC5
    usecase "View Spending History" as UC6
    usecase "Calculate Budget Status" as UC7
}

user --> UC1
user --> UC2
user --> UC3
user --> UC6

system --> UC4
system --> UC5
system --> UC7

UC2 ..> UC7 : <<include>>
UC4 ..> UC7 : <<include>>
UC7 ..> UC5 : <<extend>>

@enduml
