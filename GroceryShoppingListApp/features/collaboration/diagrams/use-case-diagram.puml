@startuml Collaboration - Use Case Diagram

actor "User" as user
actor "List Owner" as owner
actor "System" as system

rectangle "Collaboration System" {
    usecase "Make Item Suggestion" as UC1
    usecase "Approve Suggestion" as UC2
    usecase "Reject Suggestion" as UC3
    usecase "View Pending Suggestions" as UC4
    usecase "Sync Real-time Updates" as UC5
    usecase "Track User Presence" as UC6
    usecase "Send Activity Notifications" as UC7
    usecase "Handle Conflicts" as UC8
}

user --> UC1
user --> UC4
user --> UC6

owner --> UC2
owner --> UC3

system --> UC5
system --> UC7
system --> UC8

UC2 ..> UC5 : <<include>>
UC1 ..> UC7 : <<include>>

@enduml
