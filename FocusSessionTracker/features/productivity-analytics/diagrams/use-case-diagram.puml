@startuml Productivity Analytics Use Cases

skinparam usecase {
    BackgroundColor White
    BorderColor Black
    ArrowColor Black
}

left to right direction

actor "User" as user
actor "Analytics Engine" as analytics
actor "Notification Service" as notif
actor "Achievement System" as achievement

rectangle "Productivity Analytics" {
    usecase "View Dashboard" as UC1
    usecase "View Metrics Overview" as UC1a
    usecase "View Trend Charts" as UC1b
    usecase "Filter by Date Range" as UC1c

    usecase "Track Achievements" as UC2
    usecase "View Achievement Progress" as UC2a
    usecase "Unlock Achievement" as UC2b
    usecase "Share Achievement" as UC2c

    usecase "Monitor Streak" as UC3
    usecase "View Current Streak" as UC3a
    usecase "View Streak Calendar" as UC3b
    usecase "Reach Streak Milestone" as UC3c
    usecase "Start New Streak" as UC3d

    usecase "Track Deep Work" as UC4
    usecase "View Deep Work Progress" as UC4a
    usecase "Reach Threshold" as UC4b
    usecase "View Deep Work History" as UC4c

    usecase "Export Analytics Data" as UC5
    usecase "Export as CSV" as UC5a
    usecase "Export as PDF" as UC5b

    usecase "Analyze Trends" as UC6
    usecase "Calculate Focus Score Trend" as UC6a
    usecase "Identify Patterns" as UC6b
    usecase "Generate Insights" as UC6c

    usecase "Qualify High-Focus Session" as UC7
    usecase "Record Session Achievement" as UC8
    usecase "Update Daily Metrics" as UC9
    usecase "Send Achievement Notification" as UC10
}

user --> UC1
UC1 ..> UC1a : includes
UC1 ..> UC1b : includes
UC1 ..> UC1c : extends

user --> UC2
UC2 ..> UC2a : includes
UC2 ..> UC2b : extends
UC2b ..> UC2c : extends

user --> UC3
UC3 ..> UC3a : includes
UC3 ..> UC3b : includes
UC3 ..> UC3c : extends
UC3c ..> UC3d : extends

user --> UC4
UC4 ..> UC4a : includes
UC4 ..> UC4b : extends
UC4 ..> UC4c : extends

user --> UC5
UC5 ..> UC5a : extends
UC5 ..> UC5b : extends

user --> UC6
UC6 ..> UC6a : includes
UC6 ..> UC6b : includes
UC6 ..> UC6c : includes

analytics --> UC7
analytics --> UC8
analytics --> UC9

UC7 --> UC8 : triggers
UC8 --> UC2b : triggers

UC3c --> achievement
UC4b --> achievement

notif --> UC10
UC2b --> UC10 : triggers
UC3c --> UC10 : triggers
UC4b --> UC10 : triggers

@enduml
