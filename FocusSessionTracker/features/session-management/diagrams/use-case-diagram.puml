@startuml Session Management Use Cases

skinparam usecase {
    BackgroundColor White
    BorderColor Black
    ArrowColor Black
}

left to right direction

actor "User" as user
actor "Timer Service" as timer
actor "Notification Service" as notif

rectangle "Session Management" {
    usecase "Start Focus Session" as UC1
    usecase "Select Session Type" as UC1a
    usecase "Assign Task to Session" as UC1b

    usecase "Pause Session" as UC2
    usecase "Resume Session" as UC3

    usecase "Complete Session" as UC4
    usecase "Rate Session Quality" as UC4a
    usecase "Log Progress Made" as UC4b

    usecase "Abandon Session" as UC5
    usecase "Provide Abandon Reason" as UC5a

    usecase "View Session History" as UC6
    usecase "Filter Sessions" as UC6a
    usecase "Export Sessions" as UC6b

    usecase "Calculate Focus Score" as UC7
    usecase "Send Session Reminder" as UC8
}

user --> UC1
UC1 ..> UC1a : includes
UC1 ..> UC1b : extends

user --> UC2
user --> UC3

user --> UC4
UC4 ..> UC4a : includes
UC4 ..> UC4b : extends
UC4 ..> UC7 : includes

user --> UC5
UC5 ..> UC5a : extends

user --> UC6
UC6 ..> UC6a : extends
UC6 ..> UC6b : extends

timer --> UC4 : triggers
timer --> UC8

notif --> UC8

@enduml
