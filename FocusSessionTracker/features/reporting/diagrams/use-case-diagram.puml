@startuml Reporting Use Cases

skinparam usecase {
    BackgroundColor White
    BorderColor Black
    ArrowColor Black
}

left to right direction

actor "User" as user
actor "System Scheduler" as scheduler
actor "Analytics Service" as analytics
actor "Notification Service" as notif

rectangle "Reporting System" {
    usecase "Generate Weekly Report" as UC1
    usecase "Select Week Range" as UC1a
    usecase "Aggregate Session Data" as UC1b
    usecase "Calculate Daily Breakdown" as UC1c

    usecase "Generate Monthly Insight" as UC2
    usecase "Select Month/Year" as UC2a
    usecase "Analyze Productivity Patterns" as UC2b
    usecase "Identify Top Distractions" as UC2c
    usecase "Generate Key Insights" as UC2d

    usecase "View Weekly Reports" as UC3
    usecase "Filter by Date Range" as UC3a
    usecase "View Daily Breakdown" as UC3b

    usecase "View Monthly Insights" as UC4
    usecase "View Productivity Heat Map" as UC4a
    usecase "View Weekly Trends" as UC4b
    usecase "View Insight Details" as UC4c

    usecase "Export Reports" as UC5
    usecase "Select Export Format" as UC5a
    usecase "Choose Date Range" as UC5b
    usecase "Include Charts" as UC5c
    usecase "Download File" as UC5d

    usecase "View Dashboard Summary" as UC6
    usecase "View Current Week Stats" as UC6a
    usecase "View Current Month Stats" as UC6b
    usecase "View Trends Comparison" as UC6c

    usecase "View Trends Analysis" as UC7
    usecase "Select Time Range" as UC7a
    usecase "Compare Metrics" as UC7b
    usecase "Toggle Metric Display" as UC7c

    usecase "Auto-Generate Monthly Reports" as UC8
    usecase "Send Report Notification" as UC9
    usecase "Calculate Productivity Metrics" as UC10
}

' User interactions
user --> UC1
UC1 ..> UC1a : includes
UC1 ..> UC1b : includes
UC1 ..> UC1c : includes

user --> UC2
UC2 ..> UC2a : includes
UC2 ..> UC2b : includes
UC2 ..> UC2c : includes
UC2 ..> UC2d : includes

user --> UC3
UC3 ..> UC3a : extends
UC3 ..> UC3b : extends

user --> UC4
UC4 ..> UC4a : extends
UC4 ..> UC4b : extends
UC4 ..> UC4c : extends

user --> UC5
UC5 ..> UC5a : includes
UC5 ..> UC5b : includes
UC5 ..> UC5c : extends
UC5 ..> UC5d : includes

user --> UC6
UC6 ..> UC6a : includes
UC6 ..> UC6b : includes
UC6 ..> UC6c : includes

user --> UC7
UC7 ..> UC7a : includes
UC7 ..> UC7b : extends
UC7 ..> UC7c : extends

' System interactions
scheduler --> UC8
UC8 ..> UC2 : triggers

UC1 --> analytics
UC2 --> analytics
analytics --> UC10

UC1 --> notif
UC2 --> notif
notif --> UC9

@enduml
