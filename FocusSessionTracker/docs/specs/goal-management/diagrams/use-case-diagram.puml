@startuml Goal Management Use Cases

skinparam usecase {
    BackgroundColor White
    BorderColor Black
    ArrowColor Black
}

left to right direction

actor "User" as user
actor "Session Service" as session
actor "Scheduler" as scheduler

rectangle "Goal Management" {
    usecase "Set Daily Focus Goal" as UC1
    usecase "Define Target Sessions" as UC1a
    usecase "Define Target Minutes" as UC1b
    usecase "Select Goal Template" as UC1c

    usecase "Set Weekly Focus Target" as UC2
    usecase "Select Week Range" as UC2a
    usecase "Configure Weekly Targets" as UC2b

    usecase "Update Goal Targets" as UC3

    usecase "Delete Goal" as UC4
    usecase "Confirm Deletion" as UC4a

    usecase "View Goal Progress" as UC5
    usecase "Track Session Count" as UC5a
    usecase "Track Minutes Logged" as UC5b
    usecase "Calculate Progress Percentage" as UC5c

    usecase "View Achievement History" as UC6
    usecase "Filter by Date Range" as UC6a
    usecase "Filter by Goal Type" as UC6b
    usecase "Export History" as UC6c

    usecase "View Goal Statistics" as UC7
    usecase "Display Achievement Rate" as UC7a
    usecase "Show Streak Information" as UC7b
    usecase "Compare Daily vs Weekly" as UC7c

    usecase "Check Goal Achievement" as UC8
    usecase "Verify Target Met" as UC8a
    usecase "Award Bonus Points" as UC8b
    usecase "Update Streak" as UC8c

    usecase "Update Progress from Session" as UC9
    usecase "Increment Session Count" as UC9a
    usecase "Add Minutes Logged" as UC9b

    usecase "Process Day End" as UC10
    usecase "Mark Goals as Failed" as UC10a
    usecase "Update Daily Streaks" as UC10b

    usecase "Process Week End" as UC11
    usecase "Finalize Weekly Goals" as UC11a
    usecase "Update Weekly Streaks" as UC11b

    usecase "Track Goal Streak" as UC12
    usecase "Increment Streak Counter" as UC12a
    usecase "Award Milestone Badges" as UC12b
}

user --> UC1
UC1 ..> UC1a : includes
UC1 ..> UC1b : includes
UC1 ..> UC1c : extends

user --> UC2
UC2 ..> UC2a : includes
UC2 ..> UC2b : includes

user --> UC3
user --> UC4
UC4 ..> UC4a : includes

user --> UC5
UC5 ..> UC5a : includes
UC5 ..> UC5b : includes
UC5 ..> UC5c : includes

user --> UC6
UC6 ..> UC6a : extends
UC6 ..> UC6b : extends
UC6 ..> UC6c : extends

user --> UC7
UC7 ..> UC7a : includes
UC7 ..> UC7b : includes
UC7 ..> UC7c : extends

session --> UC9
UC9 ..> UC9a : includes
UC9 ..> UC9b : includes
UC9 --> UC8

UC8 ..> UC8a : includes
UC8 ..> UC8b : extends
UC8 ..> UC8c : includes
UC8 --> UC12

UC12 ..> UC12a : includes
UC12 ..> UC12b : extends

scheduler --> UC10
UC10 ..> UC10a : includes
UC10 ..> UC10b : includes

scheduler --> UC11
UC11 ..> UC11a : includes
UC11 ..> UC11b : includes

@enduml
