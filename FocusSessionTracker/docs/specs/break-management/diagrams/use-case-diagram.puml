@startuml Break Management Use Cases

skinparam usecase {
    BackgroundColor White
    BorderColor Black
    ArrowColor Black
}

left to right direction

actor "User" as user
actor "Timer Service" as timer
actor "Analytics Service" as analytics
actor "Notification Service" as notif

rectangle "Break Management" {
    usecase "Start Break" as UC1
    usecase "Select Break Type" as UC1a
    usecase "View Break Timer" as UC1b

    usecase "Log Break Activity" as UC2
    usecase "Rate Activity Effectiveness" as UC2a
    usecase "Add Activity Notes" as UC2b

    usecase "Extend Break" as UC3
    usecase "Provide Extension Reason" as UC3a

    usecase "Skip Break" as UC4
    usecase "Provide Skip Reason" as UC4a
    usecase "Check Burnout Risk" as UC4b

    usecase "Complete Break" as UC5
    usecase "View Activity Summary" as UC5a

    usecase "View Break History" as UC6
    usecase "Filter Break History" as UC6a
    usecase "Export Break Data" as UC6b

    usecase "Configure Break Pattern" as UC7
    usecase "Set Break Preferences" as UC7a

    usecase "Get Break Recommendation" as UC8
    usecase "Calculate Next Break" as UC8a

    usecase "Track Break Streak" as UC9
    usecase "Send Break Reminder" as UC10
    usecase "Analyze Break Effectiveness" as UC11
}

user --> UC1
UC1 ..> UC1a : includes
UC1 ..> UC1b : includes

user --> UC2
UC2 ..> UC2a : extends
UC2 ..> UC2b : extends

user --> UC3
UC3 ..> UC3a : extends

user --> UC4
UC4 ..> UC4a : includes
UC4 ..> UC4b : includes

user --> UC5
UC5 ..> UC5a : extends

user --> UC6
UC6 ..> UC6a : extends
UC6 ..> UC6b : extends

user --> UC7
UC7 ..> UC7a : includes

user --> UC8
UC8 ..> UC8a : includes

timer --> UC5 : triggers
timer --> UC10

notif --> UC10

analytics --> UC9
analytics --> UC11
analytics --> UC8

@enduml
