@startuml Task Management Use Cases

skinparam usecase {
    BackgroundColor White
    BorderColor Black
    ArrowColor Black
}

left to right direction

actor "User" as user
actor "Session Service" as session
actor "Notification Service" as notif

rectangle "Task Management" {
    usecase "Create Task" as UC1
    usecase "Set Task Details" as UC1a
    usecase "Add Tags" as UC1b
    usecase "Set Priority" as UC1c
    usecase "Set Due Date" as UC1d

    usecase "Edit Task" as UC2
    usecase "Update Progress" as UC2a
    usecase "Modify Estimates" as UC2b

    usecase "Assign Task to Session" as UC3
    usecase "Select from Active Tasks" as UC3a
    usecase "Start Session with Task" as UC3b

    usecase "Update Task Progress" as UC4
    usecase "Log Progress Notes" as UC4a
    usecase "Calculate Progress %" as UC4b

    usecase "Complete Task" as UC5
    usecase "Add Completion Notes" as UC5a
    usecase "Celebrate Completion" as UC5b

    usecase "View Task List" as UC6
    usecase "Filter by Status" as UC6a
    usecase "Filter by Priority" as UC6b
    usecase "Search Tasks" as UC6c
    usecase "Sort Tasks" as UC6d

    usecase "View Task Details" as UC7
    usecase "View Session History" as UC7a
    usecase "View Progress Timeline" as UC7b

    usecase "Archive Task" as UC8

    usecase "Send Due Date Reminder" as UC9
    usecase "Track Time Spent" as UC10
}

user --> UC1
UC1 ..> UC1a : includes
UC1 ..> UC1b : extends
UC1 ..> UC1c : includes
UC1 ..> UC1d : extends

user --> UC2
UC2 ..> UC2a : extends
UC2 ..> UC2b : extends

user --> UC3
UC3 ..> UC3a : includes
UC3 ..> UC3b : extends

user --> UC4
session --> UC4 : triggers
UC4 ..> UC4a : extends
UC4 ..> UC4b : includes

user --> UC5
UC5 ..> UC5a : extends
UC5 ..> UC5b : includes

user --> UC6
UC6 ..> UC6a : extends
UC6 ..> UC6b : extends
UC6 ..> UC6c : extends
UC6 ..> UC6d : extends

user --> UC7
UC7 ..> UC7a : includes
UC7 ..> UC7b : includes

user --> UC8

notif --> UC9
notif --> UC5b

session --> UC10

@enduml
