@startuml ProfessionalReadingList_Architecture
skinparam packageStyle rectangle

package "Frontend" {
  [Web App] as Web
  [Mobile App] as Mobile
  [Browser Extension] as Extension
}

package "API Layer" {
  [API Gateway] as Gateway
  [Auth Service] as Auth
}

package "Application Services" {
  [Content Service] as ContentSvc
  [Reading Service] as ReadingSvc
  [Notes Service] as NotesSvc
  [Goals Service] as GoalsSvc
  [Analytics Service] as AnalyticsSvc
  [Collaboration Service] as CollabSvc
}

package "Infrastructure" {
  database "SQL Server" as DB
  queue "Event Bus" as EventBus
  [Search Service] as Search
  [Cache] as Cache
}

package "External Services" {
  [Metadata API] as Metadata
  [ISBN Lookup] as ISBN
  [Content Parser] as Parser
  [Notification Service] as Notify
}

Web --> Gateway
Mobile --> Gateway
Extension --> Gateway
Gateway --> Auth
Gateway --> ContentSvc
Gateway --> ReadingSvc
Gateway --> NotesSvc

ContentSvc --> DB
ContentSvc --> EventBus
ContentSvc --> Search
ContentSvc --> Metadata

ReadingSvc --> DB
ReadingSvc --> EventBus

NotesSvc --> DB
NotesSvc --> Search

GoalsSvc --> DB
GoalsSvc --> EventBus

AnalyticsSvc --> DB
AnalyticsSvc --> Cache

CollabSvc --> DB
CollabSvc --> Notify

@enduml
