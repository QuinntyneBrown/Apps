@startuml Applications - Use Case Diagram

left to right direction
skinparam packageStyle rectangle

actor "Job Seeker" as seeker
actor "Email System" as email
actor "Calendar System" as calendar

rectangle "Application Management" {

  package "Application Lifecycle" {
    usecase "Start Application" as UC1
    usecase "Submit Application" as UC2
    usecase "Update Application Status" as UC3
    usecase "Withdraw Application" as UC4
    usecase "Mark as Rejected" as UC5
  }

  package "Application Tracking" {
    usecase "View All Applications" as UC6
    usecase "View Application Details" as UC7
    usecase "View Status History" as UC8
    usecase "Track Application Progress" as UC9
    usecase "View Application Timeline" as UC10
  }

  package "Documents & Notes" {
    usecase "Add Application Notes" as UC11
    usecase "Record Submitted Documents" as UC12
    usecase "Upload Application Documents" as UC13
    usecase "Update Application Details" as UC14
  }

  package "Organization" {
    usecase "Filter Applications by Status" as UC15
    usecase "Filter by Date Range" as UC16
    usecase "Filter by Company" as UC17
    usecase "Sort Applications" as UC18
    usecase "Search Applications" as UC19
    usecase "View Kanban Board" as UC20
  }

  package "Analysis" {
    usecase "View Statistics" as UC21
    usecase "Calculate Success Rate" as UC22
    usecase "Analyze Rejection Reasons" as UC23
    usecase "Track Response Times" as UC24
  }

  package "Communication" {
    usecase "Get Status Reminders" as UC25
    usecase "Get Submission Reminders" as UC26
    usecase "Receive Status Updates" as UC27
    usecase "Get Weekly Summary" as UC28
  }

  package "Export & Sharing" {
    usecase "Export Applications" as UC29
    usecase "Print Application Details" as UC30
    usecase "Bulk Update Status" as UC31
  }
}

