@startuml Job Listings - Use Case Diagram

left to right direction
skinparam packageStyle rectangle

actor "Job Seeker" as seeker
actor "Browser Extension" as extension
actor "Email Parser" as email
actor "External Job Board API" as api

rectangle "Job Listings Management" {

  package "Discovery" {
    usecase "Discover Job Listing" as UC1
    usecase "Import from Job Board" as UC2
    usecase "Capture from Webpage" as UC3
    usecase "Parse Email Alert" as UC4
    usecase "Enter Job Manually" as UC5
  }

  package "Organization" {
    usecase "Save Job Listing" as UC6
    usecase "Archive Job Listing" as UC7
    usecase "Update Job Details" as UC8
    usecase "Add Notes" as UC9
    usecase "Set Priority" as UC10
    usecase "Set Deadline" as UC11
    usecase "Categorize Job" as UC12
    usecase "Tag Job" as UC13
  }

  package "Search & Filter" {
    usecase "Search Job Listings" as UC14
    usecase "Filter by Status" as UC15
    usecase "Filter by Priority" as UC16
    usecase "Filter by Category" as UC17
    usecase "Filter by Tags" as UC18
    usecase "Filter by Company" as UC19
    usecase "Sort Listings" as UC20
  }

  package "View & Analysis" {
    usecase "View All Listings" as UC21
    usecase "View Listing Details" as UC22
    usecase "View Statistics" as UC23
    usecase "View Upcoming Deadlines" as UC24
    usecase "View Saved Listings" as UC25
    usecase "View Archived Listings" as UC26
  }

  package "Management" {
    usecase "Delete Job Listing" as UC27
    usecase "Export Listings" as UC28
    usecase "Bulk Archive" as UC29
    usecase "Bulk Delete" as UC30
    usecase "Manage Categories" as UC31
  }

  package "Notifications" {
    usecase "Get Deadline Reminders" as UC32
    usecase "Get Daily Digest" as UC33
    usecase "Get Weekly Summary" as UC34
  }
}

