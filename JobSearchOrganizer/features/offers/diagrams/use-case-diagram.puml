@startuml Offers - Use Case Diagram

actor "Job Seeker" as seeker

rectangle "Offer Management" {
  usecase "Record Offer" as UC1
  usecase "Compare Offers" as UC2
  usecase "Negotiate Offer" as UC3
  usecase "Accept Offer" as UC4
  usecase "Reject Offer" as UC5
  usecase "Track Deadlines" as UC6
  usecase "Calculate Total Compensation" as UC7
}

seeker --> UC1
seeker --> UC2
seeker --> UC3
seeker --> UC4
seeker --> UC5
seeker --> UC6
seeker --> UC7

UC2 ..> UC7 : <<include>>
UC4 ..> UC3 : <<extends>>

@enduml
