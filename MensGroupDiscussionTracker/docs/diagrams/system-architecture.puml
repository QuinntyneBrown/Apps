@startuml System Architecture - Men's Group Tracker

package "Client Layer" {
    rectangle "Web App" as WebApp
}

package "API Layer" {
    rectangle "Meeting API" as MeetingAPI
    rectangle "Discussion API" as DiscussionAPI
    rectangle "Accountability API" as AccountabilityAPI
    rectangle "Prayer API" as PrayerAPI
}

package "Domain Services" {
    rectangle "Meeting Service" as MeetingSvc
    rectangle "Accountability Service" as AcctSvc
    rectangle "Discussion Service" as DiscSvc
}

package "Event Processing" {
    rectangle "Event Bus" as EventBus
    rectangle "Notification Service" as Notifier
}

database "SQL Server" as DB
storage "Resource Storage" as Storage

WebApp --> MeetingAPI
WebApp --> DiscussionAPI
WebApp --> AccountabilityAPI
WebApp --> PrayerAPI

MeetingAPI --> MeetingSvc
DiscussionAPI --> DiscSvc
AccountabilityAPI --> AcctSvc

MeetingSvc --> DB
MeetingSvc --> EventBus
AcctSvc --> DB
AcctSvc --> EventBus

EventBus --> Notifier
Notifier --> WebApp

@enduml
