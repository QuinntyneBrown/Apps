@startuml Camping Trip Domain Model

entity "Trip" as trip {
    * id : Guid
    * destination : string
    * startDate : DateTime
    * endDate : DateTime
    tripType : TripType
    groupSize : int
    status : TripStatus
}

entity "Campsite" as campsite {
    * id : Guid
    * name : string
    * location : GeoPoint
    amenities : string[]
    rating : decimal
}

entity "Reservation" as reservation {
    * id : Guid
    * tripId : Guid
    * campsiteId : Guid
    confirmationNumber : string
    cost : decimal
}

entity "GearItem" as gear {
    * id : Guid
    * name : string
    category : string
    weight : decimal
    packed : boolean
}

entity "Activity" as activity {
    * id : Guid
    * tripId : Guid
    * type : ActivityType
    description : string
    completedDate : DateTime?
}

trip }o--|| campsite : "reserved at"
trip ||--o| reservation : "has"
trip ||--o{ gear : "requires"
trip ||--o{ activity : "includes"

enum TripType {
    CarCamping
    Backpacking
    RVCamping
}

@enduml
