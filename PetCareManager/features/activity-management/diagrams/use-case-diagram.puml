@startuml Activity Management Use Case Diagram

skinparam backgroundColor white
skinparam shadowing false
skinparam actorStyle awesome

left to right direction

title Activity Management - Use Cases

actor "Pet Owner" as Owner
actor "Veterinarian" as Vet
actor "Pet Trainer" as Trainer
actor "System" as System

rectangle "Activity Management System" {

  package "Exercise Session Management" {
    usecase "Log Exercise Session" as UC1
    usecase "View Exercise History" as UC2
    usecase "Edit Exercise Session" as UC3
    usecase "Delete Exercise Session" as UC4
    usecase "View Session Details" as UC5
    usecase "Export Exercise Data" as UC6
  }

  package "Exercise Goal Management" {
    usecase "Set Exercise Goal" as UC7
    usecase "View Active Goals" as UC8
    usecase "Track Goal Progress" as UC9
    usecase "Edit Exercise Goal" as UC10
    usecase "Cancel Exercise Goal" as UC11
    usecase "View Goal History" as UC12
  }

  package "Behavior Incident Management" {
    usecase "Log Behavior Incident" as UC13
    usecase "View Behavior History" as UC14
    usecase "Edit Behavior Incident" as UC15
    usecase "Mark Incident as Resolved" as UC16
    usecase "Share Incident Report" as UC17
  }

  package "Analytics & Insights" {
    usecase "View Activity Dashboard" as UC18
    usecase "View Activity Analytics" as UC19
    usecase "View Behavior Patterns" as UC20
    usecase "Get Personalized Recommendations" as UC21
    usecase "Compare Activity Trends" as UC22
    usecase "Generate Activity Report" as UC23
  }

  package "Notifications & Reminders" {
    usecase "Receive Exercise Reminders" as UC24
    usecase "Receive Goal Milestone Alerts" as UC25
    usecase "Receive Behavior Alerts" as UC26
    usecase "Configure Notification Settings" as UC27
  }

  package "System Operations" {
    usecase "Calculate Calories Burned" as UC28
    usecase "Update Goal Progress" as UC29
    usecase "Analyze Behavior Patterns" as UC30
    usecase "Process Domain Events" as UC31
    usecase "Generate AI Insights" as UC32
  }
}

