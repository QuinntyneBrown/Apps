@startuml Veterinary Management - Use Case Diagram

' Define styles
skinparam actorStyle awesome
skinparam packageStyle rectangle

left to right direction

' Actors
actor "Pet Owner" as Owner
actor "Veterinarian" as Vet
actor "Veterinary Staff" as Staff
actor "Emergency Responder" as Emergency
actor "System Admin" as Admin

' External Systems
actor "Email/SMS Service" as Notification
actor "Payment System" as Payment
actor "Calendar System" as Calendar

' Use Cases - Appointment Management
rectangle "Appointment Management" {
    usecase "Schedule Appointment" as UC1
    usecase "View Appointments" as UC2
    usecase "Reschedule Appointment" as UC3
    usecase "Cancel Appointment" as UC4
    usecase "Confirm Appointment" as UC5
    usecase "Check-In for Appointment" as UC6
    usecase "Complete Appointment" as UC7
    usecase "Add Appointment Notes" as UC8
    usecase "View Appointment History" as UC9
}

' Use Cases - Medical Records & Diagnosis
rectangle "Medical Records & Diagnosis" {
    usecase "View Medical History" as UC10
    usecase "Create Diagnosis" as UC11
    usecase "Update Diagnosis" as UC12
    usecase "View Diagnoses" as UC13
    usecase "Prescribe Medication" as UC14
    usecase "View Medications" as UC15
    usecase "Request Medical Records" as UC16
    usecase "Upload Medical Documents" as UC17
}

' Use Cases - Emergency Management
rectangle "Emergency Management" {
    usecase "Report Emergency" as UC18
    usecase "View Active Emergencies" as UC19
    usecase "Assign Emergency to Vet" as UC20
    usecase "Update Emergency Status" as UC21
    usecase "Triage Emergency" as UC22
    usecase "Resolve Emergency" as UC23
    usecase "Find Nearest Clinic" as UC24
}

' Use Cases - Notifications & Communications
rectangle "Notifications & Communications" {
    usecase "Send Appointment Reminder" as UC25
    usecase "Send Confirmation Email" as UC26
    usecase "Send Emergency Alert" as UC27
    usecase "Notify Diagnosis Update" as UC28
    usecase "Send Follow-Up Reminder" as UC29
}

' Use Cases - Billing & Payments
rectangle "Billing & Payments" {
    usecase "Generate Invoice" as UC30
    usecase "Process Payment" as UC31
    usecase "View Payment History" as UC32
}

' Use Cases - Calendar Integration
rectangle "Calendar Integration" {
    usecase "Add to Personal Calendar" as UC33
    usecase "Sync Vet Schedule" as UC34
    usecase "Block Time Slots" as UC35
}

' Use Cases - Reporting & Analytics
rectangle "Reporting & Analytics" {
    usecase "Generate Reports" as UC36
    usecase "View Appointment Stats" as UC37
    usecase "Export Medical Data" as UC38
}

