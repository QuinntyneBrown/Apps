@startuml Grooming Management - Use Case Diagram

left to right direction
skinparam packageStyle rectangle

actor "Pet Owner" as owner
actor "Professional Groomer" as groomer
actor "System" as system
actor "Admin" as admin

rectangle "Grooming Management System" {

    ' Appointment Management Use Cases
    package "Appointment Management" {
        usecase "Schedule Grooming\nAppointment" as UC1
        usecase "View Upcoming\nAppointments" as UC2
        usecase "Reschedule\nAppointment" as UC3
        usecase "Cancel\nAppointment" as UC4
        usecase "Complete\nAppointment" as UC5
        usecase "Receive Appointment\nReminder" as UC6
        usecase "Confirm\nAppointment" as UC7
    }

    ' Grooming Session Management Use Cases
    package "Session Management" {
        usecase "Log Home\nGrooming" as UC8
        usecase "Upload Before/After\nPhotos" as UC9
        usecase "Record Pet\nBehavior Notes" as UC10
        usecase "Record Pet\nCondition Notes" as UC11
        usecase "Rate Grooming\nService" as UC12
        usecase "Add Service\nReview" as UC13
    }

    ' Grooming History & Tracking Use Cases
    package "History & Tracking" {
        usecase "View Grooming\nHistory" as UC14
        usecase "View Session\nDetails" as UC15
        usecase "Export Grooming\nReport" as UC16
        usecase "Share History\nwith Vet" as UC17
        usecase "Track Grooming\nFrequency" as UC18
    }

    ' Groomer Management Use Cases
    package "Groomer Management" {
        usecase "Browse Available\nGroomers" as UC19
        usecase "View Groomer\nProfile" as UC20
        usecase "Save Favorite\nGroomer" as UC21
        usecase "Contact\nGroomer" as UC22
        usecase "View Groomer\nReviews" as UC23
    }

    ' Grooming Recommendations Use Cases
    package "Recommendations" {
        usecase "Receive Grooming\nRecommendation" as UC24
        usecase "View Next\nRecommended Date" as UC25
        usecase "Set Grooming\nPreferences" as UC26
        usecase "Dismiss\nRecommendation" as UC27
    }

    ' Analytics & Insights Use Cases
    package "Analytics & Insights" {
        usecase "View Grooming\nStatistics" as UC28
        usecase "Track Grooming\nCosts" as UC29
        usecase "View Spending\nTrends" as UC30
        usecase "Compare Service\nCosts" as UC31
        usecase "View Grooming\nCalendar" as UC32
    }

    ' Notification Use Cases
    package "Notifications" {
        usecase "Send Appointment\nConfirmation" as UC33
        usecase "Send Appointment\nReminder" as UC34
        usecase "Send Grooming Due\nAlert" as UC35
        usecase "Send Cancellation\nNotification" as UC36
    }

    ' Groomer-Specific Use Cases
    package "Groomer Services" {
        usecase "Manage\nAvailability" as UC37
        usecase "View Client\nAppointments" as UC38
        usecase "Update Service\nPricing" as UC39
        usecase "View Pet\nGrooming History" as UC40
        usecase "Add Session\nNotes" as UC41
    }

    ' Admin Use Cases
    package "Administration" {
        usecase "Manage Groomer\nProfiles" as UC42
        usecase "Review Service\nReports" as UC43
        usecase "Handle Dispute\nResolution" as UC44
        usecase "Monitor System\nUsage" as UC45
    }
}

