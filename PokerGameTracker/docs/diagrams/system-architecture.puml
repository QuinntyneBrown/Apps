@startuml PokerGameTracker - System

skinparam componentStyle rectangle

title Poker Game Tracker - System Architecture

package "Frontend" {
    [Mobile App] as Mobile
    [Web App] as Web
}

package "Services" {
    [Session Service] as SessionSvc
    [Bankroll Service] as BankrollSvc
    [Analytics Service] as AnalyticsSvc
}

package "Domain" {
    [Poker Session Aggregate] as SessionAgg
    [Bankroll Aggregate] as BankrollAgg
}

database "SQL Server" as DB
queue "Event Queue" as Queue

Web --> SessionSvc
Mobile --> SessionSvc
SessionSvc --> SessionAgg
BankrollSvc --> BankrollAgg
SessionSvc --> DB
BankrollSvc --> DB
AnalyticsSvc --> DB

@enduml
