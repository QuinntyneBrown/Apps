@startuml Chore Management Class Diagram

class Chore <<Aggregate Root>> {
    - ChoreId: Guid
    - HouseholdId: Guid
    - ChoreName: string
    - Description: string
    - Category: ChoreCategory
    - EstimatedDuration: int
    - DifficultyLevel: DifficultyLevel
    - PointValue: int
    - Frequency: Frequency
    - IsActive: bool
    --
    + CreateChore()
    + ModifyChore()
    + Assign()
    + CalculatePoints()
    + Delete()
}

enum ChoreCategory {
    Cleaning
    Cooking
    Outdoor
    Maintenance
    PetCare
    Other
}

enum DifficultyLevel {
    Easy
    Medium
    Hard
}

enum Frequency {
    OneTime
    Daily
    Weekly
    BiWeekly
    Monthly
}

class CreateChoreCommand <<Command>> {
    + ChoreName: string
    + Category: ChoreCategory
    + EstimatedDuration: int
    + DifficultyLevel: DifficultyLevel
}

class ChoreCreated <<Domain Event>> {
    + ChoreId: Guid
    + ChoreName: string
    + Category: string
    + DifficultyLevel: string
    + PointValue: int
    + Frequency: string
}

class ChoreAssigned <<Domain Event>> {
    + AssignmentId: Guid
    + ChoreId: Guid
    + AssignedTo: Guid
    + DueDate: DateTime
}

Chore ..> ChoreCategory
Chore ..> DifficultyLevel
Chore ..> Frequency
CreateChoreCommand ..> Chore : creates
Chore ..> ChoreCreated : raises
Chore ..> ChoreAssigned : raises

@enduml
