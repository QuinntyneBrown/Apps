@startuml RoutineFlow
[*] --> Designing

state Designing {
    [*] --> SelectActivities
    SelectActivities --> SetDurations
    SetDurations --> ArrangeOrder
}

Designing --> Ready : Save Routine

Ready --> Active : Start Morning Routine
Active --> InProgress : Begin First Activity

state InProgress {
    [*] --> TimerRunning
    TimerRunning --> ActivityComplete : Finish
    ActivityComplete --> NextActivity : Next
    NextActivity --> TimerRunning
}

InProgress --> Completed : All Activities Done
InProgress --> Paused : Pause
Paused --> InProgress : Resume
Completed --> [*]

@enduml
