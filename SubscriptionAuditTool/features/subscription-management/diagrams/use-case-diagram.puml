@startuml Subscription Management Use Case Diagram

left to right direction
actor "User" as User
actor "System" as System

rectangle "Subscription Management" {
  usecase "Add Subscription" as UC1
  usecase "View Subscriptions" as UC2
  usecase "Edit Subscription" as UC3
  usecase "Cancel Subscription" as UC4
  usecase "Pause Subscription" as UC5
  usecase "Calculate Total Spending" as UC6
  usecase "Export Subscriptions" as UC7
  usecase "Track Price Changes" as UC8
  usecase "Send Renewal Reminders" as UC9
}

User --> UC1
User --> UC2
User --> UC3
User --> UC4
User --> UC5
User --> UC7

System --> UC6
System --> UC8
System --> UC9

UC2 ..> UC6 : <<include>>
UC4 ..> UC6 : <<triggers>>

@enduml
