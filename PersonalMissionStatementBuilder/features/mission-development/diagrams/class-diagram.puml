@startuml Mission Development

class Mission <<Aggregate Root>> {
  - missionId: Guid
  - userId: Guid
  - title: string
  - missionText: string
  - status: MissionStatus
  - version: int
  - createdDate: DateTime
  - finalizedDate: DateTime?
  --
  + CreateDraft(): void
  + Revise(text): void
  + Finalize(): void
  + Reaffirm(): void
}

enum MissionStatus {
  Draft
  Active
  UnderReview
}

class CreateMissionDraftCommand {
  + UserId: Guid
  + Title: string
  + MissionText: string
}

class MissionDraftCreated <<Domain Event>> {
  + MissionId: Guid
  + UserId: Guid
  + MissionText: string
  + OccurredAt: DateTime
}

Mission *-- MissionStatus

@enduml
