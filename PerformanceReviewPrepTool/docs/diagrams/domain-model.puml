@startuml PerformanceReview_DomainModel

class Achievement <<AggregateRoot>> {
  - Id: Guid
  - Title: string
  - Description: string
  - DateAchieved: DateTime
  - ImpactMetrics: Dictionary
  - Evidence: List<Evidence>
  - Tags: List<string>
}

class Goal <<AggregateRoot>> {
  - Id: Guid
  - Description: string
  - TargetDate: DateTime
  - ProgressPercentage: int
  - Status: GoalStatus
  --
  + UpdateProgress(percentage)
  + Complete()
}

class Feedback <<Entity>> {
  - Id: Guid
  - Source: string
  - Content: string
  - Category: FeedbackCategory
  - Date: DateTime
}

class Review <<AggregateRoot>> {
  - Id: Guid
  - Period: string
  - SelfEvaluation: string
  - Achievements: List<Guid>
  - Goals: List<Guid>
  - Status: ReviewStatus
}

enum GoalStatus {
  Active
  Completed
  Revised
  Abandoned
}

Achievement "0..*" -- "0..1" Goal
Review "1" -- "0..*" Achievement
Review "1" -- "0..*" Goal
Review "1" -- "0..*" Feedback

@enduml
