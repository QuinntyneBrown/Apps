@startuml HomeBrewingTracker - System

skinparam componentStyle rectangle

title Home Brewing Tracker - System Architecture

package "Frontend" {
    [Web App] as Web
    [Mobile App] as Mobile
}

package "Services" {
    [Recipe Service] as RecipeSvc
    [Brew Session Service] as BrewSvc
    [Fermentation Service] as FermSvc
    [Inventory Service] as InvSvc
}

package "Domain" {
    [Recipe Aggregate] as RecipeAgg
    [Brew Session Aggregate] as BrewAgg
    [Fermentation Aggregate] as FermAgg
}

database "SQL Server" as DB

Web --> RecipeSvc
Mobile --> BrewSvc
RecipeSvc --> RecipeAgg
BrewSvc --> BrewAgg
FermSvc --> FermAgg
RecipeSvc --> DB
BrewSvc --> DB

@enduml
