@startuml
skinparam classAttributeIconSize 0

class Screening {
    +Guid Id
    +Guid UserId
    +Guid ScreeningTypeId
    +Guid ProviderId
    +ScreeningStatus Status
    +DateTime ScheduledDate
    +DateTime CompletedDate
    +DateTime NextDueDate
    +string Location
    +decimal Cost
    +Schedule()
    +Complete()
    +Cancel(reason)
    +RecordResults(results)
}

class ScreeningResult {
    +Guid Id
    +Guid ScreeningId
    +DateTime ResultDate
    +string Summary
    +bool AbnormalFindings
    +bool FollowUpRequired
    +string ProviderNotes
}

class ScreeningType {
    +Guid Id
    +string Name
    +string Description
    +string Category
    +int DefaultIntervalMonths
    +string PreparationInstructions
    +Gender GenderSpecific
    +int MinAge
    +int MaxAge
}

class Provider {
    +Guid Id
    +string Name
    +string Specialty
    +string Address
    +string Phone
    +bool AcceptsInsurance
}

enum ScreeningStatus {
    Scheduled
    Completed
    Cancelled
}

Screening "1" --> "0..1" ScreeningResult
Screening "*" --> "1" ScreeningType
Screening "*" --> "0..1" Provider
@enduml
