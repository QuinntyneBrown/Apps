@startuml
class Reminder {
    +Guid Id
    +Guid UserId
    +Guid ScreeningTypeId
    +ReminderType Type
    +DateTime ScheduledDate
    +DateTime SentDate
    +ReminderStatus Status
    +int UrgencyLevel
    +Send()
    +Acknowledge()
    +Dismiss()
}

class ReminderPreferences {
    +Guid Id
    +Guid UserId
    +bool EmailEnabled
    +bool SmsEnabled
    +bool PushEnabled
    +int AdvanceNoticeDays
    +TimeSpan QuietHoursStart
    +TimeSpan QuietHoursEnd
}

class NotificationService {
    +SendEmail(reminder)
    +SendSms(reminder)
    +SendPush(reminder)
}

enum ReminderStatus {
    Pending
    Sent
    Acknowledged
    Dismissed
}

Reminder --> ReminderPreferences
Reminder --> NotificationService
@enduml
