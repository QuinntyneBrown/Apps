@startuml Running Tracker - System Architecture

skinparam componentStyle rectangle

title Running Log & Race Tracker - System Architecture

package "Frontend" {
    [Mobile App] as Mobile
    [Wearable App] as Wearable
}

package "Services" {
    [Run Service] as RunSvc
    [Training Service] as TrainSvc
    [Race Service] as RaceSvc
    [Analytics Service] as AnalyticsSvc
}

package "Domain" {
    [Run Aggregate] as RunAgg
    [Training Plan Aggregate] as PlanAgg
    [Race Aggregate] as RaceAgg
}

database "SQL Server" as DB
queue "Event Queue" as Queue

package "External" {
    [GPS Service]
    [Weather API]
    [Wearable Sync]
}

Mobile --> RunSvc
Wearable --> RunSvc
RunSvc --> RunAgg
TrainSvc --> PlanAgg
RaceSvc --> RaceAgg
RunSvc --> DB
RunSvc --> [GPS Service]
RunSvc --> [Weather API]
Mobile --> [Wearable Sync]

@enduml
