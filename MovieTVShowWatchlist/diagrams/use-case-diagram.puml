    usecase "Achieve Milestones" as UC26
    usecase "View Statistics Dashboard" as UC27
    usecase "Calculate Viewing Time" as UC28
    usecase "Generate Year in Review" as UC29
  }

  package "Streaming and Availability" {
    usecase "Check Content Availability" as UC30
    usecase "Manage Subscriptions" as UC31
    usecase "Monitor Availability Changes" as UC32
    usecase "Schedule Watch Party" as UC33
    usecase "Subscribe to Episode Alerts" as UC34
    usecase "Receive New Episode Notifications" as UC35
  }
