@startuml FinancialGoalTracker_ClassDiagram

package "Goal Management" {
  class Goal {
    +Guid Id
    +string GoalName
    +decimal TargetAmount
    +decimal CurrentAmount
    +DateTime Deadline
    +string Category
    +int Priority
    +GoalStatus Status
    --
    +UpdateProgress(amount)
    +CheckAchievement()
    +Abandon(reason)
  }

  enum GoalStatus {
    Active
    Achieved
    Abandoned
  }
}

package "Progress Tracking" {
  class Contribution {
    +Guid Id
    +Guid GoalId
    +decimal Amount
    +DateTime ContributionDate
    +ContributionType Type
    +string Source
  }

  class SavingsStrategy {
    +Guid Id
    +Guid GoalId
    +decimal ContributionAmount
    +ContributionFrequency Frequency
    +DateTime StartDate
  }

  enum ContributionType {
    Manual
    Automatic
  }

  enum ContributionFrequency {
    Daily
    Weekly
    Biweekly
    Monthly
  }
}

package "Milestones" {
  class Milestone {
    +Guid Id
    +Guid GoalId
    +decimal TargetAmount
    +DateTime TargetDate
    +bool IsAchieved
    +DateTime AchievementDate
  }

  class Forecast {
    +Guid GoalId
    +DateTime ProjectedCompletionDate
    +decimal ConfidenceLevel
    +bool IsOnTrack
    +decimal VariancePercentage
  }
}

package "Account Integration" {
  class LinkedAccount {
    +Guid Id
    +Guid GoalId
    +string AccountId
    +string InstitutionName
    +DateTime LinkDate
    +bool AutoSyncEnabled
  }
}

Goal "1" -- "0..*" Contribution
Goal "1" -- "0..1" SavingsStrategy
Goal "1" -- "0..*" Milestone
Goal "1" -- "0..1" Forecast
Goal "1" -- "0..1" LinkedAccount

@enduml
