    usecase "Resolve Emergency" as UC7
    usecase "File Insurance Claim" as UC8
    usecase "View Emergency History" as UC9
    usecase "Send Emergency Alerts" as UC10
    usecase "Track Response Time" as UC11
}

homeowner --> UC1
homeowner --> UC2
homeowner --> UC3
homeowner --> UC4
homeowner --> UC5
homeowner --> UC6
homeowner --> UC7
