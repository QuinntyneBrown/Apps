@startuml Maintenance Tasks - Use Case Diagram

left to right direction
skinparam packageStyle rectangle

actor "Homeowner" as homeowner
actor "Property Manager" as manager
actor "Service Provider" as provider
actor "System" as system

rectangle "Maintenance Tasks Management" {
    ' Core Task Management
    usecase "Create Task" as UC1
    usecase "Edit Task" as UC2
    usecase "Delete Task" as UC3
    usecase "View Task Details" as UC4
    usecase "Complete Task" as UC5
    usecase "Postpone Task" as UC6
    usecase "Cancel Task" as UC7

    ' Task Scheduling
    usecase "Schedule One-Time Task" as UC8
    usecase "Schedule Recurring Task" as UC9
    usecase "Generate Next Task Instance" as UC10

    ' Task Viewing & Filtering
    usecase "View All Tasks" as UC11
    usecase "View Upcoming Tasks" as UC12
    usecase "View Overdue Tasks" as UC13
    usecase "Filter Tasks" as UC14
    usecase "Search Tasks" as UC15
    usecase "View Task Calendar" as UC16
    usecase "View Task Kanban" as UC17

    ' Task Assignment
    usecase "Assign Task to Provider" as UC18
    usecase "View Assigned Tasks" as UC19

    ' Task Documentation
    usecase "Upload Task Photos" as UC20
    usecase "Add Task Notes" as UC21
    usecase "Track Task Costs" as UC22

    ' Reporting & Analytics
    usecase "View Task Statistics" as UC23
    usecase "Generate Task Report" as UC24
    usecase "Export Tasks" as UC25

    ' Notifications & Reminders
    usecase "Send Task Reminder" as UC26
    usecase "Mark Task as Overdue" as UC27
    usecase "Send Overdue Alert" as UC28

    ' Integration
    usecase "Sync with Calendar" as UC29
    usecase "Export to Calendar" as UC30
}

