@startuml Password Account Auditor Class Diagram

class User {
  +Guid Id
  +string Email
  +byte[] MasterPasswordHash
  +List<Account> Accounts
  +SecurityScore CurrentScore
}

class Account {
  +Guid Id
  +string ServiceName
  +string Username
  +string URL
  +string Category
  +DateTime CreatedDate
  +bool IsActive
  +Password Password
  +List<SecurityFeature> SecurityFeatures
  +RecoveryInfo Recovery
}

class Password {
  +Guid Id
  +byte[] EncryptedValue
  +decimal StrengthScore
  +DateTime LastChanged
  +int AgeInDays
  +List<string> Weaknesses
}

class SecurityFeature {
  +Guid Id
  +string Type
  +bool IsEnabled
  +DateTime SetupDate
  +string Details
}

class SecurityAudit {
  +Guid Id
  +DateTime AuditDate
  +int AccountsAudited
  +int IssuesFound
  +decimal SecurityScore
  +List<Vulnerability> Vulnerabilities
}

class Vulnerability {
  +Guid Id
  +Guid AccountId
  +string Type
  +string Severity
  +string Description
  +List<string> RemediationSteps
  +string Status
}

class Breach {
  +Guid Id
  +Guid AccountId
  +string BreachSource
  +List<string> DataExposed
  +DateTime BreachDate
  +DateTime DetectionDate
  +BreachResponse Response
}

class BreachResponse {
  +Guid Id
  +List<string> ActionsTaken
  +bool PasswordChanged
  +bool AccountSecured
  +DateTime CompletedDate
}

class SecurityScore {
  +Guid Id
  +decimal OverallScore
  +decimal PasswordScore
  +decimal MFAScore
  +decimal BreachScore
  +string Trend
  +DateTime CalculatedDate
}

class RemediationAction {
  +Guid Id
  +string IssueType
  +string Severity
  +string RecommendedAction
  +string Status
  +DateTime CreatedDate
  +DateTime CompletedDate
}

class RecoveryInfo {
  +Guid Id
  +string RecoveryEmail
  +string RecoveryPhone
  +bool IsVerified
  +DateTime LastTested
}

User "1" -- "*" Account
Account "1" -- "1" Password
Account "1" -- "*" SecurityFeature
Account "1" -- "1" RecoveryInfo
Account "1" -- "*" Breach
User "1" -- "*" SecurityAudit
SecurityAudit "1" -- "*" Vulnerability
Breach "1" -- "1" BreachResponse
User "1" -- "*" RemediationAction
User "1" -- "*" SecurityScore

@enduml
