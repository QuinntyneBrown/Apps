@startuml Portfolio Management Use Case Diagram

left to right direction
actor "Investor" as User
actor "System" as System

rectangle "Portfolio Management" {
  usecase "Create Portfolio" as UC1
  usecase "View Portfolio" as UC2
  usecase "Update Strategy" as UC3
  usecase "Rebalance Portfolio" as UC4
  usecase "Delete Portfolio" as UC5
  usecase "Compare Portfolios" as UC6
  usecase "Calculate Allocation Drift" as UC7
  usecase "Update Portfolio Value" as UC8
}

User --> UC1
User --> UC2
User --> UC3
User --> UC4
User --> UC5
User --> UC6

System --> UC7
System --> UC8

UC1 ..> UC7 : <<triggers>>
UC4 ..> UC7 : <<include>>
UC2 ..> UC7 : <<include>>

@enduml
