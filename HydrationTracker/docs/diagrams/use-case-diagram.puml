@startuml Hydration Tracker Use Cases

actor "User" as user
actor "System" as system

rectangle "Hydration Tracker" {
  usecase "Log Water Intake" as UC1
  usecase "Set Daily Goal" as UC2
  usecase "View Progress" as UC3
  usecase "Schedule Reminders" as UC4
  usecase "Track Streak" as UC5
  usecase "Earn Badges" as UC6
  usecase "View Insights" as UC7
}

user --> UC1
user --> UC2
user --> UC3
user --> UC4
user --> UC7

system --> UC5
system --> UC6

UC1 ..> UC3 : <<include>>
UC1 ..> UC5 : <<extend>>
UC5 ..> UC6 : <<extend>>

@enduml
