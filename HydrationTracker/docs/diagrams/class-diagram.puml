@startuml Hydration Tracker Classes

class User {
  +Guid Id
  +string Name
  +decimal Weight
  +string ActivityLevel
  +List<IntakeEntry> Entries
  +DailyGoal CurrentGoal
  +Streak CurrentStreak
}

class IntakeEntry {
  +Guid Id
  +Guid UserId
  +DateTime Timestamp
  +decimal Amount
  +string BeverageType
  +string EntryMethod
}

class DailyGoal {
  +Guid Id
  +Guid UserId
  +decimal GoalAmount
  +DateTime EffectiveDate
  +bool IsAchieved
  +decimal ActualAmount
}

class Reminder {
  +Guid Id
  +Guid UserId
  +List<TimeSpan> ReminderTimes
  +bool IsActive
  +string CustomMessage
}

class Streak {
  +Guid Id
  +Guid UserId
  +int CurrentStreak
  +int LongestStreak
  +DateTime LastAchievementDate
}

class Badge {
  +Guid Id
  +string Name
  +string Description
  +int RequiredStreak
}

User "1" -- "*" IntakeEntry
User "1" -- "1" DailyGoal
User "1" -- "*" Reminder
User "1" -- "1" Streak
Streak "*" -- "*" Badge

@enduml
