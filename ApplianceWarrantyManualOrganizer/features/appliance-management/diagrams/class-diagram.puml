@startuml
class Appliance {
    +Guid Id
    +string Name
    +string Brand
    +string ModelNumber
    +string SerialNumber
    +Date PurchaseDate
    +decimal PurchasePrice
    +string Location
    +ApplianceStatus Status
    +Register()
    +Relocate(newLocation)
    +Retire()
}

class Warranty {
    +Guid Id
    +Guid ApplianceId
    +Date StartDate
    +Date EndDate
    +string CoverageType
}

class Manual {
    +Guid Id
    +Guid ApplianceId
    +string DocumentUrl
    +string DocumentType
}

class ServiceRecord {
    +Guid Id
    +Guid ApplianceId
    +Date ServiceDate
    +decimal Cost
}

Appliance "1" --> "*" Warranty
Appliance "1" --> "*" Manual
Appliance "1" --> "*" ServiceRecord
@enduml
