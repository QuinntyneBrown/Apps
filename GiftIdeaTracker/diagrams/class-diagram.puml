@startuml GiftIdeaTracker Class Diagram

class User {
  +UUID id
  +String email
  +String name
}

class Recipient {
  +UUID id
  +UUID userId
  +String name
  +String relationship
  +Date birthDate
  +Date[] importantDates
  +String[] preferences
  +String[] interests
  +Object sizes
  +Object contactInfo
}

class Occasion {
  +UUID id
  +UUID recipientId
  +String occasionType
  +Date date
  +String importanceLevel
  +Decimal budget
  +Boolean recurring
  --
  +generateReminders()
}

class GiftIdea {
  +UUID id
  +UUID recipientId
  +String description
  +String category
  +Object priceRange
  +String whereToBuy
  +String priority
  +String source
  +UUID claimedBy
  +String status
  --
  +claim()
  +share()
}

class Purchase {
  +UUID id
  +UUID ideaId
  +UUID occasionId
  +Date purchaseDate
  +Decimal actualCost
  +String store
  +String confirmationNumber
  +Date deliveryExpected
  +Boolean wrapped
  +Boolean given
  --
  +markDelivered()
  +markGiven()
}

class Budget {
  +UUID id
  +UUID userId
  +UUID recipientId
  +Decimal amount
  +String period
  --
  +checkThreshold()
}

class WishlistItem {
  +UUID id
  +UUID recipientId
  +String description
  +String source
  +Decimal price
  +String priority
  --
  +trackPriceChanges()
}

class CoordinationGroup {
  +UUID id
  +UUID recipientId
  +UUID[] participants
  +String coordinationType
  +Decimal budgetPool
  --
  +addContribution()
}

User "1" -- "0..*" Recipient : manages
User "1" -- "0..*" Budget : sets
Recipient "1" -- "0..*" Occasion : has
Recipient "1" -- "0..*" GiftIdea : receives
Recipient "1" -- "0..*" WishlistItem : maintains
GiftIdea "1" -- "0..1" Purchase : becomes
Occasion "1" -- "0..*" Purchase : includes
Recipient "1" -- "0..*" CoordinationGroup : coordinates for

@enduml
