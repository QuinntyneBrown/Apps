@startuml DailyJournalingApp_ClassDiagram

class User {
  - Id: Guid
  - Email: string
}

class JournalEntry {
  - Id: Guid
  - UserId: Guid
  - Date: DateTime
  - Content: string
  - WordCount: int
  - Tags: List<string>
  - IsFavorite: bool
}

class MoodLog {
  - Id: Guid
  - EntryId: Guid
  - MoodType: string
  - Intensity: int
  - Factors: List<string>
}

class WritingPrompt {
  - Id: Guid
  - Text: string
  - Category: string
}

class MediaAttachment {
  - Id: Guid
  - EntryId: Guid
  - Type: MediaType
  - FileUrl: string
}

enum MediaType {
  Photo
  VoiceNote
}

User "1" -- "0..*" JournalEntry
JournalEntry "1" -- "0..1" MoodLog
JournalEntry "1" -- "0..*" MediaAttachment

@enduml
