@startuml Relationship Management

class Relationship <<Aggregate Root>> {
  - relationshipId: Guid
  - person1Id: Guid
  - person2Id: Guid
  - relationshipType: RelationshipType
  - startDate: DateTime?
  - isActive: bool
}

enum RelationshipType {
  Parent
  Child
  Spouse
  Sibling
  Adoptive
}

class Marriage {
  - marriageId: Guid
  - spouse1Id: Guid
  - spouse2Id: Guid
  - marriageDate: DateTime
  - marriagePlace: string
  - status: MarriageStatus
}

enum MarriageStatus {
  Current
  Divorced
  Widowed
}

Relationship *-- RelationshipType
Marriage *-- MarriageStatus

@enduml
