@startuml Letter Management

class Letter <<Aggregate Root>> {
  - letterId: Guid
  - userId: Guid
  - title: string
  - content: string
  - writtenDate: DateTime
  - scheduledDeliveryDate: DateTime
  - status: LetterStatus
  - mood: Mood
  - isRead: bool
  - reflectionNotes: string
  --
  + Create(): void
  + Schedule(date): void
  + Deliver(): void
  + Read(): void
  + AddReflection(notes): void
}

enum LetterStatus {
  Draft
  Scheduled
  Delivered
  Read
  Archived
}

enum Mood {
  Happy
  Sad
  Anxious
  Excited
  Reflective
  Hopeful
}

class CreateLetterCommand {
  + UserId: Guid
  + Title: string
  + Content: string
  + Mood: Mood
}

class LetterCreated <<Domain Event>> {
  + LetterId: Guid
  + UserId: Guid
  + WrittenDate: DateTime
  + OccurredAt: DateTime
}

Letter *-- LetterStatus
Letter *-- Mood

@enduml
