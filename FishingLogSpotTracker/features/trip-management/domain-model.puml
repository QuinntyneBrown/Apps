@startuml Fishing Trip Domain Model

entity "Trip" as trip {
    * id : Guid
    * userId : Guid
    --
    plannedDate : DateTime
    actualStartTime : DateTime?
    endTime : DateTime?
    locationId : Guid
    targetSpecies : string[]
    totalCatches : int
    status : TripStatus
}

entity "Catch" as catch {
    * id : Guid
    * tripId : Guid
    --
    * species : string
    length : decimal
    weight : decimal
    catchTime : DateTime
    released : boolean
    photoUrl : string
}

entity "FishingSpot" as spot {
    * id : Guid
    --
    * name : string
    * coordinates : GeoPoint
    waterType : WaterType
    access : AccessType
    averageRating : decimal
}

entity "WeatherConditions" as weather {
    * id : Guid
    * tripId : Guid
    --
    temperature : decimal
    windSpeed : decimal
    pressure : decimal
    conditions : string
}

entity "Equipment" as equipment {
    * id : Guid
    --
    * name : string
    type : EquipmentType
    purchaseDate : DateTime
    cost : decimal
}

trip }o--|| spot : "fished at"
trip ||--o{ catch : "contains"
trip ||--o| weather : "logged during"
catch }o--o| equipment : "caught with"

enum TripStatus {
    Planned
    InProgress
    Completed
    Cancelled
}

enum WaterType {
    Freshwater
    Saltwater
    Brackish
}

@enduml
