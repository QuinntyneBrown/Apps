@startuml Couples Goal Tracker

class Goal <<Aggregate Root>> {
  + Id: Guid
  + Title: string
  + Category: GoalCategory
  + TargetDate: DateTime
  + Status: GoalStatus
  + Partner1Id: Guid
  + Partner2Id: Guid
}

class Milestone <<Entity>> {
  + Id: Guid
  + GoalId: Guid
  + Title: string
  + TargetDate: DateTime
  + IsAchieved: bool
}

class Progress <<Entity>> {
  + Id: Guid
  + GoalId: Guid
  + Amount: decimal
  + PartnerId: Guid
  + Timestamp: DateTime
}

class Task <<Entity>> {
  + Id: Guid
  + GoalId: Guid
  + AssignedTo: Guid
  + Description: string
  + DueDate: DateTime
}

Goal "1" -- "*" Milestone
Goal "1" -- "*" Progress
Goal "1" -- "*" Task

@enduml
