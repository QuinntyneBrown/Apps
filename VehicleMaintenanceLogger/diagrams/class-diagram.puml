@startuml VehicleMaintenanceLogger_ClassDiagram

class User {
  - Id: Guid
  - Email: string
}

class Vehicle {
  - Id: Guid
  - UserId: Guid
  - Make: string
  - Model: string
  - Year: int
  - VIN: string
  - CurrentMileage: int
}

class MaintenanceRecord {
  - Id: Guid
  - VehicleId: Guid
  - ServiceType: string
  - Date: DateTime
  - Mileage: int
  - Cost: decimal
}

class RepairRecord {
  - Id: Guid
  - VehicleId: Guid
  - Problem: string
  - RepairDate: DateTime
  - Cost: decimal
}

class ServiceProvider {
  - Id: Guid
  - Name: string
  - Rating: decimal
}

User "1" -- "0..*" Vehicle
Vehicle "1" -- "0..*" MaintenanceRecord
Vehicle "1" -- "0..*" RepairRecord
MaintenanceRecord "0..*" -- "0..1" ServiceProvider

@enduml
