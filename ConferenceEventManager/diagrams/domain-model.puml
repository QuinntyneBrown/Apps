@startuml Conference Manager Domain Model

class Conference <<Aggregate Root>> {
  + Id: Guid
  + Name: string
  + Location: string
  + StartDate: DateTime
  + EndDate: DateTime
  + Cost: decimal
  + Status: ConferenceStatus
}

class Session <<Entity>> {
  + Id: Guid
  + Title: string
  + Speakers: List<string>
  + StartTime: DateTime
  + Track: string
}

class Contact <<Aggregate Root>> {
  + Id: Guid
  + Name: string
  + Company: string
  + Title: string
  + Email: string
  + Phone: string
}

class Expense <<Entity>> {
  + Id: Guid
  + ConferenceId: Guid
  + Type: ExpenseType
  + Amount: decimal
  + Date: DateTime
}

class Certificate <<Entity>> {
  + Id: Guid
  + Type: string
  + Credits: decimal
  + IssueDate: DateTime
}

Conference "1" -- "*" Session
Conference "1" -- "*" Contact
Conference "1" -- "*" Expense
Conference "1" -- "*" Certificate

@enduml
