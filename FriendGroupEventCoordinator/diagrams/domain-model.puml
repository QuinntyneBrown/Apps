@startuml Friend Group Event Coordinator

class Event <<Aggregate Root>> {
  + Id: Guid
  + Title: string
  + DateTime: DateTime
  + Location: string
  + Budget: decimal
  + Status: EventStatus
}

class RSVP <<Entity>> {
  + UserId: Guid
  + EventId: Guid
  + Response: RSVPResponse
  + PlusOnes: int
}

class Expense <<Entity>> {
  + PayerId: Guid
  + Amount: decimal
  + Description: string
}

class Poll <<Entity>> {
  + Question: string
  + Options: List<string>
  + Votes: Dictionary
}

Event "1" -- "*" RSVP
Event "1" -- "*" Expense
Event "1" -- "*" Poll

@enduml
