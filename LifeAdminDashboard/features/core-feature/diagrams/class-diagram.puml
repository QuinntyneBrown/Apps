@startuml
class Item {
    +Guid Id
    +Guid UserId
    +string Name
    +string Description
    +ItemStatus Status
    +DateTime CreatedAt
    +Create()
    +Update()
    +Delete()
}

class ItemService {
    +GetAll(): List<Item>
    +GetById(id): Item
    +Create(dto): Item
    +Update(id, dto): Item
    +Delete(id): void
}

enum ItemStatus {
    Active
    Inactive
    Archived
}

ItemService --> Item
@enduml
