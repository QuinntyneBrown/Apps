@startuml Batch Cooking - Class Diagram

class BatchCookingSession <<Aggregate Root>> {
    - Id : Guid
    - UserId : Guid
    - Name : string
    - ScheduledDate : DateTime
    - Status : SessionStatus
    - Recipes : List<BatchRecipe>
    - TotalPrepTime : int
    - TotalServings : int
    - Notes : string
    --
    + AddRecipe(recipe, multiplier) : void
    + RemoveRecipe(recipeId) : void
    + Start() : void
    + Complete() : void
    + GetConsolidatedIngredients() : List<BatchIngredient>
    + CalculateTotalTime() : int
}

class BatchRecipe <<Entity>> {
    - Id : Guid
    - SessionId : Guid
    - RecipeId : Guid
    - Multiplier : int
    - TotalServings : int
    - StorageMethod : string
    - ContainerCount : int
    - ExpiryDate : DateTime?
    - IsCompleted : bool
    --
    + MarkCompleted(actualServings) : void
    + UpdateStorage(method, containers) : void
}

enum SessionStatus {
    Planned
    InProgress
    Completed
    Cancelled
}

enum StorageMethod {
    Refrigerate
    Freeze
    Pantry
}

BatchCookingSession "1" *-- "*" BatchRecipe

@enduml
